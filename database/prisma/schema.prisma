datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator db {
  provider = "go run github.com/steebchen/prisma-client-go"
}

// Uncomment to generate Prisma Client JS (required for the studio)
// (https://github.com/steebchen/prisma-client-go/issues/455)
// generator js {
