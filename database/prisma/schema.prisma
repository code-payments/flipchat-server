model User {
    id          String   @id
    displayName String?
    publicKeys  PublicKey[]

    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    @@map("flipchat_users")
}

model PublicKey {
    key       String @id
    user      User   @relation(fields: [userId], references: [id])
    userId    String

    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    @@map("flipchat_publickeys")
}

model Intent {
    id          String   @id
    isFulfilled Boolean

    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    @@map("flipchat_intents")
}